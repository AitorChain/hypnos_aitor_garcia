{% extends 'base.html.twig' %}

{% block title %}Groupe Hypnos{% endblock %}

{% block body %}

    <div class="container-fluid banner hotel-banner">

        <section class="container">
            <div class="row ">
                <div class="banner-text text-center">
                    <h1>Nos h√¥tels</h1>
                </div>
            </div>

            <div class="row row-cols-xl-3 list-hotels">
                {% for etablissement in etablissements  %}
                <div class="cols-xl-3 col-md-6 col-sm-12 card-container">
                    <a href="{{ path('app_hotel', {slug: etablissement.slug}) }}">
                        <div class="card text-center">
                                    {% if etablissement.photoFilename is not null %}
                                        <img class="card-img-top hotel-slider-img" src="/uploads/images/{{ etablissement.photoFilename }}" alt="">
                                    {% else %}
                                        <img class="card-img-top hotel-slider-img" src="/assets/images/hypnos-logo.png" alt="">
                                    {% endif %}

                            <div class="card-body">
                                <h4 class="card-title">{{ etablissement }}</h4>
                                <h6 class="card-subtitle"><strong>{{ etablissement.ville }}</strong> - {{ etablissement.suites|length }} suites</h6>
                                <button class="btn-secondary" href="{{ path('app_hotel', {slug: etablissement.slug}) }}">Decouvrir</button>
                            </div>
                        </div>
                    </a>
                </div>
                {% endfor %}
            </div>

        </section>

    </div>

{% endblock %}