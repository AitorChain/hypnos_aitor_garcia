{% extends 'base.html.twig' %}

{% block title %}Reserver | {{ parent() }}{% endblock %}

{% block body %}
<div class="form-template">
    <div class="container-form-template">
        <h1 class="form-titre text-center">Reserver</h1>
    {{ form_start(form) }}
        {{ form_row(form.etablissement) }}
        {{ form_row(form.suite) }}
        {{ form_rest(form) }}
        <p id="availability_info"></p>
        {% if is_granted('ROLE_USER') %}
        <div class="form-buttons pt-5">
            <button type="button" class="btn-primary" id="submit_reservation"  data-bs-toggle="modal" data-bs-target="#modal_confirmation">Réserver</button>
        </div>
            <!-- Modal -->
            <div class="modal fade" id="modal_confirmation" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalConfirmationLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered reservation-alert">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalConfirmationLabel">Validez votre réservation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body" id="alert-modal-body">

                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn-primary" id="submit_reservation">Valider</button>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center connect-info">Connectez-vous pour résérver</p>
            <div class="form-buttons">
                <a class="btn-primary" href="{{ path('app_login') }}">Se connecter</a>
                <a class="btn-secondary" href="{{ path('app_register') }}">Créer une compte</a>
            </div>
        {% endif %}
        <div class="info-prix">

        </div>
    {{ form_end(form) }}
    </div>
</div>


{% endblock %}
